#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	int i=0;
	while(i<t)
	{
	    float x,y,z;
	    cin>>x>>y>>z;
	    
	    

	     
         if (y>=x)
	    {cout<< z  <<endl;}
	    
	    else if (x>y)
	    {float d=(x/y);
	    int e=(x/y);
	    //cout<<"value of d is"<<d<<endl;
	      if(d>e)
	        cout<<int(d+1)*z<<endl;
	        else
	        {cout<<int(d*z)<<endl;}
	    }
	    i++;
	}
	
	
	
	return 0;
}
